<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/darkgreen"
    tools:context="com.fll.sommayahsoliman.instacycle.ScannerActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan New Item"
        android:id="@+id/textViewScan"
        android:textColor="@color/yellow"
        android:layout_alignTop="@+id/button"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/textView"
        android:textSize="24sp"
        android:typeface="sans" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="322dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:background="@drawable/emptyselection"
        android:layout_gravity="center_horizontal"
        android:id="@+id/itemLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:typeface="sans"
            android:textSize="36sp" />
    </LinearLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan Item"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"

        android:onClick="onScanClick" />



</LinearLayout>
